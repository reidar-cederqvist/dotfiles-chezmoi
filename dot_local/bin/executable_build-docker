#!/bin/bash -eux

 

docker run \
    --rm \
    -t \
    -i \
    -v "${HOME}"/git/iopsys/iopsyswrt:/home/dev/iopsyswrt \
    -v "${HOME}"/.gitconfig:/home/dev/.gitconfig \
    -v "${HOME}"/.ssh:/home/dev/.ssh:ro \
    -v "${SSH_AUTH_SOCK}":/ssh-agent \
    -e SSH_AUTH_SOCK=/ssh-agent \
    -u "$(id -u):$(id -g)" \
    iopsys/sdk-builder:"${1:-latest}"
